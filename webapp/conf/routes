# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /         controllers.HomeController.index()
GET     /admin         controllers.HomeController.adminDash()
GET     /about     controllers.HomeController.about()

GET /v1/home     controllers.v1.FeedsController.home()

GET /v1/category/:categoryId                                  controllers.v1.FeedsController.category(categoryId: String)

GET /v1/:categoryId/mentions/:entityName/:entityType/:sentiment  controllers.v1.FeedsController.mentions(categoryId: String, entityName: String, entityType: String, sentiment: String)

GET /v1/newsletter/signup  controllers.v1.CommsController.newsletterSignupGet(email: Option[String])
POST /v1/newsletter/signup  controllers.v1.CommsController.newsletterSignupPost()
GET /v1/newsletter/verify  controllers.v1.CommsController.newsletterVerifyGet(token: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

### NoDocs ###
GET   /docs/swagger-ui/*file        controllers.Assets.at(path:String="/public/lib/swagger-ui", file:String)
